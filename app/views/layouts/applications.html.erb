<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <meta charset="utf-8" name="keywords" content="<%= @seo_keywords.join(", ") %>">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'applications', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'applications', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= login_helper %>

    <%= render "shared/navbar", location: "top" %>

    <%= yield %>

    <% if session[:source] %>
      <p>Thanks for visiting me from <%= session[:source] %></p>
    <% end %>
  </body>
</html>
