<h1>Applications</h1>

<p id="notice"><%= notice %></p>

<%= link_to "Create New Application", new_application_path %>

<% @applications.each do |app| %>
    <div>
        <%= image_tag app.thumbnail unless app.thumbnail.nil? %>
        <h3><%= link_to app.title, application_show_path(app) %></h3>
        <h4><%= app.subtitle %></h4>
        <%= link_to "Edit Application", edit_application_path(app) %>
    </div>
<% end %>